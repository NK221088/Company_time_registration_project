<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<HBox alignment="CENTER" spacing="40.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dtu.example.ui.projectMenu">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

   <!-- Left side: Main menu elements -->
   <VBox alignment="CENTER" spacing="20.0">
      <children>
         <Label text="Select a project:" />
         <ChoiceBox fx:id="projectContainer" onAction="#showInformation" prefWidth="150.0" />
         <Button fx:id="generateProejctReportbutton" onAction="#projectReport" text="Generate project Report" />
      </children>
   </VBox>

   <!-- Right side: Project information -->
   <VBox alignment="CENTER_LEFT" spacing="10.0">
      <children>
         <Label text="Project Information:" />
         <Text fx:id="projectInfo" wrappingWidth="300.0" />
      </children>
   </VBox>
</HBox>